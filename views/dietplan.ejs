                    <a class="nav-link text-light" href="/about">PROGRESS</a>
                </li>
            </ul>
        </div>
    </div>
    <% if(flag==1) { %>
        <div class="">
            <a data-target="#SigninModal" data-toggle="modal" class="" id="signin" href="#SigninModal">Sign
                in</a>
            <p style="display:inline">/</p>
            <a data-target="#LoginModal" data-toggle="modal" class="" id="signin" href="#LoginModal">Log in</a>
        </div>
        <% } else { %>
            <div>
                <p style="display: inline;">
                    <%= use_name %>
                </p>
                <a href="/user"><i style="font-size:x-large" class="fas fa-user-circle"></i></a>
            </div>
            <% } %>
</nav>

</div>
<!-- <div class="row container  align-items-center"> -->
<div class="container-fluid body1 bg-light">
  <h1 style="font-weight: bolder; font-size: 350%;">Put your diet on autopilot</h1>
    <p style="font-size:x-large;">Eat This Much creates personalized meal plans based on your food preferences,
      budget, and schedule. Reach your diet and nutritional goals with our calorie calculator, weekly meal plans,
      grocery lists and more. Create your meal plan right here in seconds.</p>
    <% if (i == 1) { %>
    <h1 style="font-weight: bolder; padding-top: 5%;">Ready to give it a shot? Let us know your diet.</h1>
    <div class="row justify-content-center">
      <div class="col-lg-5 ">
        <div style="border-style: solid ; margin-top: 20px;"
          class="container-fluid justify-content-center align-items-center">
          <div class="row justify-content-center align-items-center">
            <!-- <div class="col-sm-10 container-fluid justify-content-center"> -->
            <form method="POST" >
              <div class="lab1">
                
                <label for="colFormLabelLg" class="col-form-label col-form-label-lg" style="padding-right:10px;"> I Want
                  To Eat</label>
                <input type="number" name="calories" min="0" max="20000" step="100" placeholder="####" value="1100"
                  class="form-control-lg calorie-input-lg text-md-right " style="padding-left: 15px;" id="cal_input">
                <!-- <input type="number" min="0" max="20000" step="100"  value="1100" > -->
                <label for="cal_input" id="cal-input-label" style="font-size: 140%;padding-left: 15px;">Calories</label>
              </div>
              <!-- <input type="email" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg"> -->
              <div class="row justify-content-center align-items-center">

                <button type="submit" class="btn btn-dark genbtn" name="generate">Generate !</button>
              </div>
            </form>
          </div>
        </div>  
      </div>
    </div>
    <% } %>
    <!-- </div> -->

</div>
<% if(i==2){ %>
<hr class="my-9">
<div class="container-fluid menu">

  <div class="row  justify-content-center foodmenu">
    <!-- <div class="col-sm-4">
      <div class="card">...</div> -->

    <div class="col-lg-5 scroll">
      <div class="card" style="padding:5%">
        <h1 style="font-weight: bolder;font-size:50px;">Breakfast</h1>
        <div id="breakfast">
          
        <table>
          <tr>
            <th>Food Name</th>           <th >Quantity</th>        <th >C alories</th>
          </tr>
          <% bfarr.forEach(function(eachperson){ %>
            <tr>
            <th style="padding:5%"> <%= eachperson.foods %> </th>      <th style="padding:5%"><%= eachperson.quant %></th>       <th style="padding:5%"><%= eachperson.cal %></th>
            </tr>
          <% }) %>  
        </table>
      </div>
    </div>
  </div>
  </div>
  <div class="row  justify-content-center foodmenu">
    <div class="col-lg-5 scroll">
      <div class="card" style="padding:5%">
        <h1 style="font-weight: bolder;font-size:50px;">Lunch</h1>
        <div id="Lunch">
          
          <table>
            <tr>
              <th>Food Name</th><th>Quantity</th><th>Calories</th>
            </tr>
            <% lunarr.forEach(function(eachperson){ %>
              <tr>
              <th> <%= eachperson.foods %> </th>      <th><%= eachperson.quant %></th>       <th><%= eachperson.cal %></th>
              </tr>
            <% }) %>  
          </table>
        </div>

      </div>



    </div>
  </div>
  <div class="row  justify-content-center foodmenu">

    <div class="col-lg-5 scroll">
      <div class="card" style="padding:5%">
        <h1 style="font-weight: bolder;font-size:50px;">Dinner</h1>
        <div id="Dinner">
          
          <table>
            <tr>
              <th>Food Name</th><th>Quantity</th><th>Calories</th>
            </tr>
            <% dinarr.forEach(function(eachperson){ %>
              <tr>
              <th> <%= eachperson.foods %> </th>      <th><%= eachperson.quant %></th>       <th><%= eachperson.cal %></th>
              </tr>
            <% }) %>  
          </table>
        </div>

      </div>



    </div>
  </div>  
  
</div>
<% } %>
